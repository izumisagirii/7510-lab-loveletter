<ScreenLogin>:
    name: 'LoginInScreen'

    canvas.before:
        Color:
            rgba: 0.5,0.5,0.5,0.5
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'group_assets/images/LoginBack.jpg'

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: False
        padding: dp(50)
        spacing: dp(10)

        MDLabel:
            id: label
            text: 'Login In'
            font_size: dp(40)
            color: 0,0,0,0.85
            halign: 'center'
            bold: True

        MDTextField:
            id: username_field
            hint_text: 'Username'
            hint_text_color_normal:  0,0,0,0.5
            hint_text_color_focus: 0,0,0,1
            line_color_normal: 0.2,0.8,0.2,.5
            line_color_focus: 0.2,0.8,0.2,1
            text_color_normal:0,1,1,0.5
            text_color_focus: 0,1,1,1
            icon_left: 'account'
        MDTextField:
            id: password_field
            hint_text: 'Password'
            int_text_color_normal:  0,0,0,0.5
            hint_text_color_focus: 0,0,0,1
            line_color_normal: 0.2,0.8,0.2,.5
            line_color_focus: 0.2,0.8,0.2,1
            text_color_normal:0,1,1,0.5
            text_color_focus: 0,1,1,1
            password: True
            icon_left: 'key-arrow-right'
        MDFillRoundFlatIconButton:
            icon: 'login'
            text: 'Login In'
            on_press: root.LoginIn()
            pos_hint: {"center_x": .5}
            size_hint: .35,None
        MDFillRoundFlatIconButton:
            icon: 'home'
            text: 'Home'
            md_bg_color: 0.7,0,0,0.8
            on_press: 
                app.back_to_main()
            pos_hint: {"center_x": .5}
            size_hint: .35,None
            