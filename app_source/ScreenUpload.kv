<ScreenUpload>:
    MDLabel:
        size_hint_y: 1
        pos_hint: {"bottom": 1}
        md_bg_color: app.theme['bg']
    ScrollView:
        MDBoxLayout:
            orientation: "vertical"
            halign: "top"
            padding: dp(40)
            spacing: dp(20)
            adaptive_height: True
            MDLabel:
                size_hint_y: None
                size: dp(10),dp(20)
            MDLabel:
                text:'Choose your profile pic:'
                theme_text_color: "Custom"
                text_color: app.theme['text']
            MDSmartTile:
                id:profile
                radius: dp(40)
                box_color: 1, 1, 1, 0
                source: "group_assets/images/image.png"
                size_hint: None, None
                size: "80dp", "80dp"
                on_release:root.change_pic('profile')
            MDLabel:
                text:'Choose your pic:'
                theme_text_color: "Custom"
                text_color: app.theme['text']
            MDSmartTile:
                id:pic
                radius: dp(24)
                box_color: 1, 1, 1, 0
                source: "group_assets/images/l_hires.jpg"
                size_hint: None, None
                size: "320dp", "320dp"
                on_release:root.change_pic('pic')
            MDLabel:
                text:'Add your word:'
                theme_text_color: "Custom"
                text_color: app.theme['text']
            MDTextFieldRect:
                id: input
                multiline: True
                mode: "rectangle"
                hint_text: "Intro yourself"
                size_hint: 1, None
                height: "300dp"
            MDFillRoundFlatIconButton:
                icon: "cloud-upload"
                text:'Upload'
                icon_size: dp(30)
                font_size: dp(25)
                text_color: app.theme['icon']
                icon_color:app.theme['icon']
                md_bg_color: app.theme['button']
                on_release:root.upload()
    MDFloatingActionButton:
        on_release: 
            app.back_to_main()
        icon:'keyboard-backspace'
        icon_color: app.theme['icon']
        md_bg_color: app.theme['button']
        pos: dp(10), root.height-self.height-dp(10)


